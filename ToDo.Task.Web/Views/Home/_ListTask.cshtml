@model ToDo.Task.Model.MyTaskList
@{
    Layout = null;
}

@if (Model.MyToDoTask != null)
{
    <h1>Todo List</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="col-1">#</th>
                <th class="col-8">Task</th>
                <th class="col-1">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MyToDoTask)
            {
            <tr>
                <td scope="row"><input type="checkbox" class="form-check big-checkbox" onclick="markComplete(@item.Id)" value="" /></td>
                <td>@item.Message</td>
                <td><button type="button" onclick="deleteTask('@item.Id')"><i class="bi bi-trash"></i></button></td>
                <td><button type="button" onclick="editTask('@item.Id','@item.Message')"><i class="bi bi-pencil"></i></button></td>
            </tr>
            }
        </tbody>
    </table>
}

@if (Model.CompletedToDoTask != null)
{
    <h1>Task Completed List</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="col-1">#</th>
                <th class="col-8">Task</th>
                <th class="col-1">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CompletedToDoTask)
            {
                <tr>
                    <td scope="row">##</td>
                    <td class="donework">@item.Message</td>
                    <td><button type="button" onclick="return false;deleteTask('@item.Id')"><i class="bi bi-trash"></i></button></td>
                </tr>
            }
        </tbody>
    </table>
}